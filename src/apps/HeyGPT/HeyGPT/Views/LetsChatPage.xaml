<Page
    x:Class="HeyGPT.App.Views.LetsChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:HeyGPT.App.Views"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <views:HeaderWorkspaceControl Grid.Row="0" VerticalAlignment="Top"/>

        <Grid Grid.Row="1" Margin="0, 10, 0, 0 ">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" HorizontalAlignment="Stretch" VerticalScrollMode="Enabled" IsTabStop="True">
                <Grid  Width="700" HorizontalAlignment="Center">
                    <ListView>
                        <ListViewItem Content="A"/>
                        <ListViewItem Content="B"/>
                        <ListViewItem Content="C"/>
                        <ListViewItem Content="D"/>
                        <ListViewItem Content="E"/>
                        <ListViewItem Content="F"/>
                        <ListViewItem Content="G"/>
                        <ListViewItem Content="H"/>
                        <ListViewItem Content="I"/>
                        <ListViewItem Content="J"/>
                        <ListViewItem Content="K"/>
                        <ListViewItem Content="L"/>
                        <ListViewItem Content="M"/>
                        <ListViewItem Content="N"/>
                        <ListViewItem Content="O"/>
                        <ListViewItem Content="P"/>
                        <ListViewItem Content="Q"/>
                        <ListViewItem Content="R"/>
                        <ListViewItem Content="S"/>
                        <ListViewItem Content="T"/>
                        <ListViewItem Content="U"/>
                        <ListViewItem Content="V"/>
                        <ListViewItem Content="W"/>
                        <ListViewItem Content="X"/>
                        <ListViewItem Content="Y"/>
                        <ListViewItem Content="Zed"/>
                    </ListView>
                </Grid>
            </ScrollViewer>

            <Grid Grid.Row="1" HorizontalAlignment="Center" Width="700" Margin="0, 10, 0, 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="500"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Uid="Chat_Prompt_Text_Box" Grid.Column="0" MaxHeight="120" Style="{StaticResource PromptTextBoxStyle}"/>
                <Button Grid.Column="2" Width="35" Height="50" VerticalAlignment="Bottom" Style="{StaticResource SimpleGlyphButtonStyle}" Content="&#xE110;"/>
            </Grid>
        </Grid>

        <views:FooterWorkspaceControl Grid.Row="2" Margin="0, 10, 0, 0" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
