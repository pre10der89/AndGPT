<UserControl
    x:Class="AndGPT.WinUI.Views.ChatWorkspaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AndGPT.WinUI.Views"
    mc:Ignorable="d">

    <Grid Background="{StaticResource WorkspaceBackgroundColor}" Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <views:HeaderWorkspaceControl Grid.Row="0"/>

        <!--<ScrollViewer Grid.Row="2"
        Name="ForegroundElement"
        HorizontalAlignment="Stretch"
        VerticalScrollMode="Enabled"
        IsTabStop="True">

        </ScrollViewer>-->
        <views:MainWorkspaceControl Grid.Row="2" Name="ForegroundElement" />
        <views:FooterWorkspaceControl Grid.Row="4"/>
    </Grid>
</UserControl>
